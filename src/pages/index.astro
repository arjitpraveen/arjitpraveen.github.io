---
import Link from '@/components/Link.astro'
import SocialIcons from '@/components/SocialIcons.astro'
import Layout from '@/layouts/Layout.astro'
import { SITE, SOCIAL_LINKS } from '@/consts'

---

<Layout title="Home" description={SITE.description}>
  <div class="flex h-[calc(100vh-150px)] items-center justify-center px-4 about-bg">
    <div class="flex max-w-screen-lg flex-col items-center gap-8 md:flex-row md:gap-14">
      
      <!-- Avatar -->
      <img
        src="/644129_ZfmGnfad.png"
        alt="Arjit"
        class="size-56 rounded-full dark:hidden"
      />
      <img
        src="/644129_ZfmGnfad.png"
        alt="Arjit"
        class="hidden size-56 rounded-full dark:block"
      />

      <!-- Text -->
      <div class="grid gap-3 md:gap-4">
        <h1 class="text-center text-4xl font-bold md:text-left md:text-6xl">
          Hello! I'm Arjit :)
        </h1>

        <p class="text-center text-lg text-muted-foreground md:text-left md:text-xl max-w-xl">
          Cybersecurity enthusiast, CTF player, and weeb. 
        </p>

        <p class="text-center text-sm text-muted-foreground md:text-left">
          Start with the <Link href="/blog" underline class="text-primary">blog</Link>,
          learn more <Link href="/about" underline class="text-primary">about me</Link>,
          or reach out below.
          P.S if you have a hard time finding your way around, use the <Link href="/tags" underline class="text-primary">tags</Link> page.
        </p>

        <!-- Socials -->
        <div class="mt-3 flex justify-center gap-4 md:justify-start md:gap-8">
          <SocialIcons
            links={SOCIAL_LINKS}
            size="icon-lg"
            iconClass="size-6"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
